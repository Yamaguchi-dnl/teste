rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Permite que qualquer pessoa leia os arquivos (essencial para o site público)
      allow read: if true;
      // Permite a escrita (upload, delete) apenas para usuários autenticados (admin)
      allow write: if request.auth != null;
    }
  }
}
